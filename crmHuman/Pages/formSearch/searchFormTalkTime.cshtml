<form class="row g-3" method="get" action="/historyImpact">

    <div class="col-md-3">
        <label class="form-label">Từ khoá</label>
        <input type="text" value="@Model.RequestSearch.Token" name="token" class="form-control">
    </div>

    <div class="col-md-3">
        <label class="form-label">Từ Ngày</label>
        <input value="@Model.RequestSearch.FromText" type="date" name="from" class="form-control">
    </div>
    <div class="col-md-3">
        <label class="form-label">Đến ngày</label>
        <input value="@Model.RequestSearch.ToText" type="date" name="to" class="form-control">
    </div>



    <div class="col-md-6" style="display:none">
        <label class="form-label">Limit</label>
        <input type="text" name="limit" value="@Model.RequestSearch.Limit" class="form-control">
    </div>
 <div class="col-md-3">
        <label class="form-label">Trạng thái</label>
        <select id ="cbstatus1" name="status" value="@Model.RequestSearch.Status" class="form-select" aria-label="">
            <option value="-1">Tất cả</option>
            @foreach (var element in Model.DataStatus.Data)
                {

                        var item = element as dynamic;
                    @if (@Model.RequestSearch.Status == item.Id )
                    {
                        <option selected value="@item.Id">@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }


        </select>
    </div>
   
    
    @if(Model.Permision.SearchGrop == true)
    {
        <div class="col-md-3">
                <label class="form-label">Nhóm</label>
                <select id ="cbgroup" name="group"  class="form-select" aria-label="">
                    <option value="tat-ca">Tất cả</option>
                

                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Thành viên</label>
                <select id ="cbmember" name="member" class="form-select" aria-label="">
                    <option selected>Tất cả</option>
                
                </select>
            </div>
    }
   




    <div class="text-end">
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        
    </div>
</form>