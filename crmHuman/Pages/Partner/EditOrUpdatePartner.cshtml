                                buttonAddText ="Thêm dự án",
                                LableText ="Danh sách dự án"
                            

                            });
                        }

                        @{
                            Html.RenderPartial("ControlForm/ItemAdd", new
                            {
                                DataList = Model.listAddress.Data,
                                buttonAddText ="Thêm mới địa chỉ",
                                LableText ="Địa chỉ",
                                 idAdd = "lisItemAdd",
                                controlButton = "Dự án",
                            

                            });
                        }
            </form>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary"
                    data-bs-dismiss="modal">
                Đóng
            </button>
